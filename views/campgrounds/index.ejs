<% layout("layouts/boilerplate") %>
    <!--include the ejs-mate partial layout using the keyword layout instead of includes-->
    <div id="map" style="width: 100%; height: 350px;" class="container-fluid"></div>

    <div class="container">

    <h2 class="mt-4 mb-2">Campgrounds</h2>
    <hr class="mt-0">
    <div class="row">
       

    <% for(let camp of camps){%>
        
        <div class="col-md-4">
           
        <div class="card  mb-3">
            
                
                    <img src="<%=camp.images.length ? camp.images[0].url : `${defaultImg}` %>" class="img-fluid card-img-top">
                
                
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text"><small class="text-muted">
                            <i class="bi bi-geo-alt"></i>
                            <%= camp.location %>
                        </small></p>
                        <p class="card-text">
                            <%= camp.description.substring(0, 45) %>...
                        </p>
                        <h6 class="card-text">
                            $<%= camp.price %> / Per Night
                        </h6>
                       
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-wecamp mt-2">Check <%= camp.title %></a>
                    </div>
                
            
        </div>
    </div>

        <% } %>

    
</div>

